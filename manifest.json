{
    "manifest_version": 3,
    "name": "BlurTube",
    "version": "1.0.1",
    "description": "BlurTube blurs YouTube's feed so you don't get distracted the moment you open YouTube",
    "permissions": [],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ],
            "run_at": "document_idle"
        }
    ]
}